<h3>新規投稿</h3>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">

    <%= render "layouts/error_messages", model: @article %>
    
    <%= form_for(@article) do |f| %>
      <div class="form-group">
        <p><%= f.label :タイトル %></p>
        <p><%= f.text_field :title, class: "form-control" %></p>
      </div>

      <div class="form-group">
       <p><%= f.label :写真  %></p>
       <p><%= f.attachment_field :article_image %></p>
      </div>

      <div class="form-group">
        <p><%= f.label :本文  %></p>
        <p><%= f.text_area :text, :size=> "100x30", class: "form-control" %></p>
      </div>

      <div class="form-group">
        <p><%= f.label :タグ %>
        <p><%= f.text_field :tag_list, value: @article.tag_list.join(','), :size=>"50", placeholder: "複数タグ付けする場合 , で区切って下さい", class: "form-control"%></p>
      </div>

      <p><%= f.submit "投稿する" , class: "btn btn-default center-block" %></p>
    
    <% end %>
  </div>
</div>
<h3>新規投稿</h3>

<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    <div class="row">
      <%= message %>
    </div>
  <% end %>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <%= form_for(@article) do |f| %>
      <div class="form-group">
        <p><%= f.label :タイトル %></p>
        <p><%= f.text_field :title, :size=>"100" %></p>
      </div>

      <div class="form-group">
       <p><%= f.label :写真  %></p>
       <p><%= f.attachment_field :article_image %></p>
      </div>

      <div class="form-group">
        <p><%= f.label :本文  %></p>
        <p><%= f.text_area :text, :size=> "100x30" %></p>
      </div>

      <p><%= f.submit "投稿する" , class: "btn btn-default center-block" %></p>
    
    <% end %>
  </div>
</div>
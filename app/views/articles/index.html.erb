<h3>記事一覧</h3>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>ユーザー名</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><p><%= attachment_image_tag article, :article_image, format: "jgeg", follback: "l_e_others_470.jpeg", size: "100x100" %><p></td>
              <td><p><%= link_to "#{article.title.truncate(30)}", article_path(article) %><p></td>
              <td><p><%= link_to "#{article.user.name}", user_path(article.user) %><p></td>
            </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>タイトル</th>
        <th>ユーザー名</th>
        <th>タグ</th>
        <th>コメント数</th>
        <th>いいね数</th>
      </tr>
    </thead>
    <tbody>
      <% articles.each do |article| %>
        <tr>
          <td><p><%= attachment_image_tag article, :article_image, format: "jgeg", size: "100x100" %><p></td>
          <td><p><%= link_to "#{article.title.truncate(30)}", article_path(article) %><p></td>
          <td><p><%= link_to "#{article.user.name}", user_path(article.user) %><p></td>
          <td><p><% article.tag_list.each do |tag_list| %>
                   <span class="label label-info"><%= tag_list %></span>
                  <% end %></p></td>
          <td><p><%= article.article_comments.count %></p></td>
          <td><p><%= article.favorites.count %> <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></p></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
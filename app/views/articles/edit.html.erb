<h3>記事を編集する</h3>

<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_for(@article) do |f| %>

  <p><%= f.label :タイトル  %>
  <%= f.text_field :title %></p>

  <p><%= f.label :写真  %>
  <%= f.attachment_field :article_image %></p>

  <p><%= f.label :本文  %>
  <%= f.text_field :text %></p>

  <p><%= f.submit "編集する" %></p>
<% end %>
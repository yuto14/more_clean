<div class="row col-xs-4 col-xs-offset-4">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <%= f.label :名前 %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :住所 %>
      <%= f.select :address, User.addresses.keys,{}, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :パスワード（６文字以上） %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :パスワード（確認用） %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "新規登録", class: "btn btn-default" %>
    </div>
  <% end %>


  <div class="row col-xs-12 guide">
    <p>登録済の方はこちら</p>
    <%= link_to "ログイン", new_user_session_path, class: "btn btn-default" %>
  </div>
</div>
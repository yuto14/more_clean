<h3>登録情報を変更する</h3>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <p><%= f.label :名前　%></p>
        <p><%= f.text_field :name, class: "form-control" %></p>
      </div>

      <div class="form-group">
        <p><%= f.label :プロフィール写真 %></p>
        <p><%= f.attachment_field :profile_image %></p>
      </div>

      <div class="form-group">
        <p><%= f.label :紹介文 %></p>
        <p><%= f.text_area :introduction, :size=>"40x5", class: "form-control" %></p>
      </div>

      <div class="form-group">
        <p><%= f.label :住所　%></p>
        <p><%= f.select :address, User.addresses.keys,{}, class: "form-control"%></p>
      </div>
      
      <p><%= f.submit "編集する", class: "btn btn-default center-block" %></p>

    <% end %>
  </div>
</div>